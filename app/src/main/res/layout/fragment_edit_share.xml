<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.EditShareFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@mipmap/ic_back"
        />

    <EditText
        android:id="@+id/et_add_share_title"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:hint="文章标题"
        android:layout_marginTop="61dp"
        android:background="@null"
        android:textCursorDrawable="@drawable/et_cursor_color"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"/>
    
    <EditText
        android:id="@+id/et_add_share_link"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:hint="链接"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@null"
        android:textCursorDrawable="@drawable/et_cursor_color"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_share_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="56dp"
        android:src="@mipmap/ic_post"
        android:clickable="true"
        app:fabSize="auto"
        app:elevation="5dp"
        android:fitsSystemWindows="true"/>

</FrameLayout>